@using BlockBase.Dapps.NeverForgetBot.WebApp.Models
@model IEnumerable<TwitterContextViewModel>


<div class="container">
    <div class="row">
        <div class="col-lg-12">

            <table id="usersList" class="table table-striped display nowrap" style="width:100%">
                <thead class="userHeader" style="text-align:center">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Author)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Content)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Link)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MediaLink)
                        </th>

                </thead>

                <tbody>
                    @foreach (var context in Model)
                    {
                        <tr>
                            <td>


                                <a asp-controller="TwitterContexts" asp-action="Details" asp-route-id="@context.Id">Expand</a>
                            </td>
                            <td>
                                @Html.DisplayFor(tc => context.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(tc => context.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(tc => context.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(tc => context.Content)
                            </td>
                            <td>
                                @Html.DisplayFor(tc => context.Link)
                            </td>
                            <td>
                                @Html.DisplayFor(tc => context.MediaLink)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>