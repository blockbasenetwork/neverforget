@using BlockBase.Dapps.NeverForgetBot.WebApp.Models
@using BlockBase.Dapps.NeverForgetBot.Common.Enums
@model IEnumerable<GeneralContextViewModel>

<div class="container homeContext" style="max-width:1000px">
    <div class="row">
        <table class="table homeTable display no-wrap" style="width:100%">
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            <div class="row" style="margin-bottom: 20px; padding-top:20px">

                                <div class="col- socialMediaLogo" style="padding: 0; display:flex; align-items:center; border:none">
                                    <div class="card logoImg" style="border:none">
                                        @if (item.SourceType == SourceTypeEnum.Reddit)
                                        {
                                            <img src="~/img/Reddit_logo.png" />
                                        }
                                        else if (item.SourceType == SourceTypeEnum.Twitter)
                                        {
                                            <img src="~/img/Twitter_logo.png" />
                                        }
                                    </div>
                                </div>

                                <div class="col-md contentContext">
                                    @if (item.SourceType == SourceTypeEnum.Reddit)
                                    {
                                        <div class="card-body" style="border:solid;border-color:rgb(255, 86, 0); background-color:rgba(255, 86, 0, 0.3)">
                                            <h5 class="card-title title" style="display:block; text-align:left">@Html.DisplayFor(modelItem => item.Title)</h5>
                                            <div class="card-text content" style="display:block; text-align:left">@Html.DisplayFor(modelItem => item.Content)</div>
                                            <b class="card-text foot" style="display:block; text-align:right">@Html.DisplayFor(modelItem => item.Author)</b>
                                        </div>
                                    }
                                    else if (item.SourceType == SourceTypeEnum.Twitter)
                                    {
                                        <div class="card-body" style="border:solid;border-color:rgb(29,161,242); background-color:rgba(29,161,242, 0.3)">
                                            <h5 class="card-title title" style="display:block; text-align:left">@Html.DisplayFor(modelItem => item.Title)</h5>
                                            <div class="card-text content">@Html.DisplayFor(modelItem => item.Content)</div>
                                            <b class="card-text foot" style="display:block; text-align:right">@Html.DisplayFor(modelItem => item.Author)</b>
                                        </div>
                                    }
                                </div>

                                <div class="col- creationDate" style="display:flex; align-items:center">
                                    <div class="card-body">
                                        @{
                                            var dateToString = item.Date.ToString("yyyy/MM/dd");
                                        }
                                        <div class="card-content date">@Html.DisplayFor(modelItem => dateToString) <i class="fas fa-calendar-alt"></i></div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>